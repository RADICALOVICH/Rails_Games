<h1 class="mb-4">Авторизация</h1>

<%= form_with url: session_path do |form| %>
  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :email%>
    </div>

    <div class = "col-sm-10">
      <%= form.email_field :email, class: 'form-control form-control-lg', id: 'email_field' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :password%>
    </div>

    <div class = "col-sm-10">
      <%= form.password_field :password, class: 'form-control form-control-lg', id:'password_field' %>
    </div>
  </div>

  <p><%= form.submit("Авторизоваться", id: 'btn_submit', class: 'btn btn-primary') %></p>
<% end %>