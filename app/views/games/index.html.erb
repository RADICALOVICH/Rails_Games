<% @games.each do |game| %>
  <div class="card mb-3" style="max-width: 1000px;", id="card">
    <div class="row g-0">
      <div class="col-md-4">
        <img src="<%= polymorphic_url(game.avatar) %>" class="img-fluid rounded-start" alt="...">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= game.name %></h5>
          <p class="card-text", id="game_desription"><%= game.description.truncate_words(30)%></p>
        </div>
          <small>
            <ul class="list-group list-group-flush">
              <li class="list-group-item">Платформы: <%= game.platforms.join(', ')%></li>
              <li class="list-group-item">Жанры: <%= game.genres.join(', ')%></li>
              <li class="list-group-item">Дата релиза: <%= game.release_date.to_s[0..-14]%></li>
            </ul>
          </small>
          <div class= 'wishlist-buttons' id = 'wishlist-button_<%=game.id%>'>  
            <% if user_signed_in? %>
              <% if current_user.wishlist&.include?(game.id)%>
                <%= button_to "Удалить из желаемого", games_delete_game_path, params: { game: game.id }, class: 'btn btn-danger'%>
              <% else %>
                <%= button_to "Добавить в желаемое", games_add_game_path,params: { game: game.id }, class: 'btn btn-primary'%>
              <% end %>
            <% else %>
            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="no">
              <button class="btn btn-primary" style="pointer-events: none;" type="button" disabled>Добавить в желаемое</button>
            </span>
            <% end %>
          </div>
      </div>
    </div>
  </div>
<% end %>

