<div class = 'text-end', id ='paginator'>
  <%= paginate @games,theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center", nav_class: "d-inline-block" %>
</div>
<div id = 'change_buttons'>
  <% if current_page?(:controller => 'wishlists', :action => 'index') %>
    <div id = 'btn'><%= button_to "Список всех игр", wishlists_index_path,method: :get, class: 'btn btn-primary disabled' %></div>
    <div id = 'btn'><%= button_to "Уже вышли", wishlists_released_path,method: :get, class: 'btn btn-primary'%></div>
    <div id = 'btn'><%= button_to "Еще не вышли", wishlists_unreleased_path,method: :get, class: 'btn btn-primary'%></div>
  <% end %>
  <% if current_page?(:controller => 'wishlists', :action => 'released') %>
    <div id = 'btn'><%= button_to "Список всех игр", wishlists_index_path,method: :get, class: 'btn btn-primary ' %></div>
    <div id = 'btn'><%= button_to "Уже вышли", wishlists_released_path,method: :get, class: 'btn btn-primary disabled'%></div>
    <div id = 'btn'><%= button_to "Еще не вышли", wishlists_unreleased_path,method: :get, class: 'btn btn-primary'%></div>
  <% end %>
  <% if current_page?(:controller => 'wishlists', :action => 'unreleased') %>
    <div id = 'btn'><%= button_to "Список всех игр", wishlists_index_path,method: :get, class: 'btn btn-primary ' %></div>
    <div id = 'btn'><%= button_to "Уже вышли", wishlists_released_path,method: :get, class: 'btn btn-primary'%></div>
    <div id = 'btn'><%= button_to "Еще не вышли", wishlists_unreleased_path,method: :get, class: 'btn btn-primary disabled'%></div>
  <% end %>
</div>

<div id ='wishlist'>
  <% @games.each do |game| %>
    <div class="card mb-3" style="max-width: 1000px;", id="card_game_<%=game.id%>">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= polymorphic_url(game.avatar) %>" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= link_to "#{game.name}", "games/#{game.id}" %></h5>
            <p class="card-text", id="game_desription"><%= game.description.truncate_words(30)%></p>
          </div>
            <small>
              <ul class="list-group list-group-flush">
                <li class="list-group-item">Платформы: <%= game.platforms.join(', ')%></li>
                <li class="list-group-item">Жанры: <%= game.genres.join(', ')%></li>
                <li class="list-group-item">Дата релиза: <%= game.release_date.to_s[0..-14]%></li>
              </ul>
            </small>
            <div class= 'wishlist-buttons' id = 'wishlist-button_<%=game.id%>'>  
              <% if user_signed_in? %>
                <% if current_user.wishlist&.include?(game.id)%>
                  <%= button_to "Удалить из желаемого", wishlists_delete_game_path, params: { game: game.id }, class: 'btn btn-danger'%>
                <% else %>
                  <%= button_to "Добавить в желаемое", games_add_game_path,params: { game: game.id }, class: 'btn btn-primary'%>
                <% end %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class = 'text-end', id ='paginator'>
  <%= paginate @games,theme: 'bootstrap-5', pagination_class: "pagination-sm flex-wrap justify-content-center", nav_class: "d-inline-block" %>
</div>