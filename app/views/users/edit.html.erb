<h1 class ="mb-4"><%= t('form.edit_profile')%></h1>
<%= form_with model: current_user do |form| %>
  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :email, t('form.email') %>
    </div>

    <div class = "col-sm-10">
      <%= form.email_field :email, placeholder: current_user.email, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :name, t('form.name')%>
    </div>

    <div class = "col-sm-10">
      <%= form.text_field :name, placeholder: current_user.name, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :old_password, t('form.old_password')%>
    </div>

    <div class = "col-sm-10">
      <%= form.password_field :old_password, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :password, t('form.new_password')%>
    </div>

    <div class = "col-sm-10">
      <%= form.password_field :password, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :password_confirmation, t('form.password_confirmation')%>
    </div>

    <div class = "col-sm-10">
      <%= form.password_field :password_confirmation, class: 'form-control form-control-lg' %>
    </div>
  </div>
  <p><%= form.submit(t('form.update'), id: 'btn', class: 'btn btn-primary') %></p>
<% end %>