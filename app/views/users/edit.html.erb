<% if @ok == false %>
  <h2>Ошибки ввода:<h2>
  <ul>
    <% current_user.errors.each do |error| %>
	  <li><%= error.full_message %></li>
    <% end %>
  </ul>
<% end %>
<h1 class ="mb-4">Редактирование профиля</h1>
<%= form_with model: current_user do |form| %>
  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :email, 'Почта' %>
    </div>

    <div class = "col-sm-10">
      <%= form.email_field :email, placeholder: current_user.email, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :name, 'Имя'%>
    </div>

    <div class = "col-sm-10">
      <%= form.text_field :name, placeholder: current_user.name, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :old_password, 'Старый пароль'%>
    </div>

    <div class = "col-sm-10">
      <%= form.password_field :old_password, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :password, 'Новый пароль'%>
    </div>

    <div class = "col-sm-10">
      <%= form.password_field :password, class: 'form-control form-control-lg' %>
    </div>
  </div>

  <div class = "mb-3 row">
    <div class = "col-sm-2 col-form-label">
      <%= form.label :password_confirmation, 'Повторите новый пароль'%>
    </div>

    <div class = "col-sm-10">
      <%= form.password_field :password_confirmation, class: 'form-control form-control-lg' %>
    </div>
  </div>
  <p><%= form.submit("Обновить", id: 'btn', class: 'btn btn-primary') %></p>
<% end %>